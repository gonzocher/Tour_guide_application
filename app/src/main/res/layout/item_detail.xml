<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".GuideDetailsActivity"
    android:background="@drawable/gradient_background"
    android:alpha="0.9">

    <ImageView
        android:id="@+id/item_image"
        android:layout_height="@dimen/item_detail_image_height"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_detail_text_title"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/item_tel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_detail_text_location"
        android:gravity="center_horizontal"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/item_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_detail_text_location"
        android:gravity="center_horizontal"
        android:alpha="0.6"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/call_image"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/website_image"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/worldwide"/>

        <ImageView
            android:id="@+id/map_image"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/pin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/call_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/call_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"
            android:alpha="0.6"/>

        <TextView
            android:id="@+id/website_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/web_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"
            android:alpha="0.6"/>

        <TextView
            android:id="@+id/map_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/map_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"
            android:alpha="0.6"/>
    </LinearLayout>

</LinearLayout>
