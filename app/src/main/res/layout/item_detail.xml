<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".GuideDetailsActivity"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/item_image"
        android:layout_height="@dimen/item_detail_image_height"
        android:layout_width="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_detail_text_title"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/item_tel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_detail_text_location"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/item_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_detail_text_location"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/call_image"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/call"
            app:civ_border_width="2dp"
            app:civ_border_color="#A1FFB2"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/website_image"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_baseline_web_24"
            app:civ_border_width="2dp"
            app:civ_border_color="#A1FFB2"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/map_image"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_baseline_map_24"
            app:civ_border_width="2dp"
            app:civ_border_color="#A1FFB2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/call_text"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/call_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"/>

        <TextView
            android:id="@+id/website_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/web_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"/>

        <TextView
            android:id="@+id/map_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/map_button"
            android:gravity="center_horizontal"
            android:textColor="@color/action_button_text"/>

    </LinearLayout>

</LinearLayout>
